<h1> Moniers' Notes </h1>

<% @posts.each  do |post| %>

<h2> <%= link_to post.title, post %> </h2>
<% if post.draft? %>
    <div class="p-2 rounded bg-gray-100 text-gray-900"> Draft </div>
<% elsif post.scheduled? %>
    <div class="p-2 rounded bg-blue-100 text-gray-900"> Scheduled </div>
<% end %>
<p> <%= post.content%> </p>
<% end %>

